<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLMButtons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null">

    <!--MainFragmentCalendar-->

    <TextView
        android:id="@+id/TVCalendarMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="@dimen/D.standardPadding"/>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/CVCalendar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:compactCalendarCurrentDayBackgroundColor="@color/C.Light_Green"
        app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorAccent"
        app:compactCalendarCurrentSelectedDayIndicatorStyle="fill_large_indicator"
        app:compactCalendarTextSize="@dimen/D.showplanttextsize"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarBackgroundColor="@color/C.background_grey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVCalendarClickedDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/D.showplanttextsize"
            android:textStyle="bold"
            android:background="@color/C.Grey"
            android:padding="@dimen/D.standardPadding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/D.standardPadding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/S.calendar_TV_PlantsToWater"
                android:textSize="@dimen/D.showplanttextsize"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/TVPlantsToWater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
