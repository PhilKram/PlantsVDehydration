<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/TVShowOwnPlantToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C.white"
                android:textSize="20dp"
                android:gravity="bottom"
                android:paddingTop="@dimen/D.standardPadding"
                />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <!--Picture on top-->

    <ImageView
        android:id="@+id/IVShowownPlantPicture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingStart="@dimen/D.standardPadding"
        android:paddingEnd="@dimen/D.standardPadding"
        android:contentDescription="@string/S.showownplant_IV_PlantPicture"
        android:background="@color/C.Black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/D.underlineHeight"
        android:paddingBottom="@dimen/D.underlineHeight"
        android:paddingStart="@dimen/D.standardPadding"
        android:paddingEnd="@dimen/D.standardPadding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/S.showownplant_TV_PlantName"
            android:textStyle="bold"
            android:textSize="@dimen/D.showplanttextsize"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/TVShowOwnPlantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/D.showplanttextsize"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/D.underlineHeight"
        android:paddingStart="@dimen/D.standardPadding"
        android:paddingEnd="@dimen/D.standardPadding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/S.showownplant_TV_PlantDate"
            android:textStyle="bold"
            android:textSize="@dimen/D.showplanttextsize"
            />

        <TextView
            android:id="@+id/TVShowOwnPlantDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/D.showplanttextsize"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/D.underlineHeight"
        android:paddingStart="@dimen/D.standardPadding"
        android:paddingEnd="@dimen/D.standardPadding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/S.showownplant_TV_PlantFrequency"
            android:textStyle="bold"
            android:textSize="@dimen/D.showplanttextsize"
            />

        <TextView
            android:id="@+id/TVShowOwnPlantFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/D.showplanttextsize"
            />

    </LinearLayout>

    <!--Button on bottom-->
    <Button
        android:id="@+id/BDeletePlant"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/D.diameter"
        android:text="@string/S.showownplant_B_DeletePlant"
        android:background="@drawable/roundbuttonred"
        android:textColor="@color/C.white"
        android:layout_gravity="center"
        android:layout_marginTop="112dp"
        />

</LinearLayout>